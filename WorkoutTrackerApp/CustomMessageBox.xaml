<Window x:Class="WorkoutTrackerApp.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutTrackerApp"
        mc:Ignorable="d"
        Title="CustomMessageBox" Height="200" Width="400">
    <Grid Margin="30">
        <StackPanel Orientation="Vertical">
            <TextBlock Name="txtMessage" Text="Message text" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
            <Button Content="OK" Width="80" Margin="20" Name="btnOK" Click="btnOK_Click"/>
        </StackPanel>
    </Grid>
</Window>
