<Window x:Class="WorkoutTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutTrackerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="10" HorizontalAlignment="Center">
            <TextBlock Name="tblkHome" Text="HOME" MouseDown="tblkHome_MouseDown" Margin="10"/>
            <TextBlock Name="tblkNewTraining" Text="NEW TRAINING" MouseDown="tblkNewTraining_MouseDown" Margin="10"/>
            <TextBlock Name="tblkHistory" Text="HISTORY" MouseDown="tblkHistory_MouseDown" Margin="10"/>
            <TextBlock Name="tblkProgress" Text="PROGRESS" MouseDown="tblkProgress_MouseDown" Margin="10"/>
        </StackPanel>        
    </Grid>
</Window>
