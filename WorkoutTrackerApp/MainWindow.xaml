<Window x:Class="WorkoutTrackerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkoutTrackerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200"
        MinHeight="600" MinWidth="900"
        MaxHeight="1000" MaxWidth="1500"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="CadetBlue" Width="220">
            <TextBlock Name="tblkHome" Text="🏠 HOME" Style="{DynamicResource SidebarText}" MouseDown="tblkHome_MouseDown"/>
            <TextBlock Name="tblkNewTraining" Text="➕ NEW TRAINING" Style="{DynamicResource SidebarText}" MouseDown="tblkNewTraining_MouseDown"/>
            <TextBlock Name="tblkHistory" Text="📜 HISTORY" Style="{DynamicResource SidebarText}" MouseDown="tblkHistory_MouseDown"/>
            <TextBlock Name="tblkExercises" Text="💪 EXERCISES" Style="{DynamicResource SidebarText}" MouseDown="tblkExercises_MouseDown"/>
        </StackPanel>

        <!-- Main content -->
        <Frame Name="mainFrame" Grid.Column="1" Source="Home.xaml" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
