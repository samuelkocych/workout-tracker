<Page x:Class="WorkoutTrackerApp.History"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="History">

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="icWorkouts">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Padding="10" Margin="10" Width="320" Height="250">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <!-- name -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- date -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- separator -->
                                    <RowDefinition Height="*"/>
                                    <!-- exercise list -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- separator -->
                                    <RowDefinition Height="Auto"/>
                                    <!-- delete button -->
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Grid.Row="1" Text="{Binding Date, StringFormat='yyyy-MM-dd'}" FontSize="14" Foreground="Gray"/>

                                <Separator Grid.Row="2"/>

                                <ItemsControl Grid.Row="3" ItemsSource="{Binding Exercises}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" Margin="5,0,0,0"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <Separator Grid.Row="4"/>

                                <Button Grid.Row="5" Name="btnDelete" Content="Delete" Click="btnDelete_Click" Tag="{Binding WorkoutID}" Background="Red" Foreground="White" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
