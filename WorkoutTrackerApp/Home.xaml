<Page x:Class="WorkoutTrackerApp.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" 
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="Home" Loaded="Page_Loaded">

    <Grid ShowGridLines="True">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid ShowGridLines="True" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Chart -->
            <Border Margin="10" BorderBrush="LightGray" BorderThickness="2" CornerRadius="20">
                <lvc:CartesianChart Name="WorkoutChart" Margin="20"/>
            </Border>

            <!-- Stats -->
            <Grid Grid.Column="1" ShowGridLines="True" Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="LightGray" CornerRadius="10" Padding="20" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="⏳Total Time" FontWeight="Bold" Foreground="Gray" TextAlignment="Center"/>
                        <TextBlock Text="45 min" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Background="LightGray" CornerRadius="10" Padding="20" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔥 Calories Burned" FontWeight="Bold" Foreground="Gray" TextAlignment="Center"/>
                        <TextBlock Text="45 min" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="2" Background="LightGray" CornerRadius="10" Padding="20" Margin="5">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🏋️‍ Weight Lifted" FontWeight="Bold" Foreground="Gray" TextAlignment="Center"/>
                        <TextBlock Text="45 min" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>
                </Border>

            </Grid>

        </Grid>

        <Border Grid.Row="1" Background="LightGray" CornerRadius="20" Margin="10,10,10,10" Grid.ColumnSpan="2">
            <TextBlock Text="Start new training!" Padding="10" HorizontalAlignment="center"/>
        </Border>

        <Grid Grid.Row="1" ShowGridLines="True" Grid.ColumnSpan="2" Margin="0,56,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="LightGray" CornerRadius="20" Margin="10">
                <TextBlock Text="Motivational Quote" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Border Grid.Column="1" Background="LightGray" CornerRadius="20" Margin="10">
                <TextBlock Text="Next Training" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>

    </Grid>
</Page>
