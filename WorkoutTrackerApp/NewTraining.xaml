<Page x:Class="WorkoutTrackerApp.NewTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTraining">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid HorizontalAlignment="Center" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Workout Name"/>
                <TextBox Name="tbxTrainingName" Width="200"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Total Duration (minutes)"/>
                <TextBox Name="tbxTotalDuration" Width="200"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" Margin="10,0,10,0">
                <Label Content="Training Date"/>
                <DatePicker Name="dpDatePicker" Width="200"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <StackPanel Orientation="Vertical" Margin="15,5,15,5">
                <Label Content="Exercise Name"/>
                <ComboBox Name="cmbExercises" Width="150">
                    <ComboBoxItem Content="Bench Press"/>
                    <ComboBoxItem Content="Squat"/>
                    <ComboBoxItem Content="Deadlit"/>
                    <ComboBoxItem Content="Pull-up"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="15,5,15,5">
                <Label Content="Sets"/>
                <TextBox Name="tbxSets" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="15,5,15,5">
                <Label Content="Reps"/>
                <TextBox Name="tbxReps" Width="100"/>
            </StackPanel>

            <StackPanel Orientation="Vertical" Margin="15,5,15,5">
                <Label Content="Weight"/>
                <TextBox Name="tbxWeight" Width="100"/>
            </StackPanel>

            <Button Name="btnAddExercise" Content="Add" Width="100" Height="20" Margin="15,8,15,8" VerticalAlignment="Bottom" Click="btnAddExercise_Click"/>
        </StackPanel>

        <ListBox Name="lbxExercises" Grid.Row="2" Margin="10" HorizontalContentAlignment="Stretch">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                        <Button Grid.Column="1" Name="btnEditExercise" Content="Edit" Width="60" Margin="5" Click="btnEditExercise_Click"/>
                        <Button Grid.Column="2" Name="btnDeleteExercise" Content="Delete" Width="60" Margin="5" Click="btnDeleteExercise_Click"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Button Name="btnSaveTraining" Grid.Row="3" Content="Save" Width="100" Margin="10"/>
    </Grid>
</Page>
