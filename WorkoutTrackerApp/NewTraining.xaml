<Page x:Class="WorkoutTrackerApp.NewTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTraining">

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox Name="cmbExercises" Width="150" Margin="5">
                <ComboBoxItem Content="Bench Press"/>
                <ComboBoxItem Content="Squat"/>
                <ComboBoxItem Content="Deadlit"/>
                <ComboBoxItem Content="Pull-up"/>
            </ComboBox>
        </StackPanel>
        
    </Grid>
</Page>
