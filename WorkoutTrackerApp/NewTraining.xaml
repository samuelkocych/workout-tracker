<Page x:Class="WorkoutTrackerApp.NewTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTraining">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Zadávání nového cviku -->
        <StackPanel Orientation="Horizontal" Margin="0 10 0 10">
            <ComboBox x:Name="cmbExercises" Width="150" Margin="5">
                <ComboBoxItem Content="Bench Press"/>
                <ComboBoxItem Content="Squat"/>
                <ComboBoxItem Content="Deadlift"/>
                <ComboBoxItem Content="Pull-up"/>
                <ComboBoxItem Content="Bicep Curl"/>
            </ComboBox>
            <TextBox x:Name="txtSets" Width="50" Margin="5" Text="Sets" Foreground="Gray" />
            <TextBox x:Name="txtReps" Width="50" Margin="5" Text="Reps" Foreground="Gray" />
            <TextBox x:Name="txtWeight" Width="70" Margin="5" Text="kg" Foreground="Gray"/>
            <Button Content="Add" Click="btnAddExercise_Click" Margin="5"/>
        </StackPanel>

        <!-- Seznam přidaných cviků -->
        <ListBox x:Name="lstExercises" Grid.Row="1" Margin="0 10 0 10"/>

        <!-- Celková doba a kalorie -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 10">
            <TextBox x:Name="txtDuration" Width="100" Margin="5" Text="Duration (min)" Foreground="Gray" />
            <TextBox x:Name="txtCalories" Width="100" Margin="5" Text="Calories" Foreground="Gray" />
            <Button Content="Save Training" Click="btnSaveTraining_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
