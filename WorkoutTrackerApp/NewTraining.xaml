<Page x:Class="WorkoutTrackerApp.NewTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WorkoutTrackerApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NewTraining">

    <Grid ShowGridLines="True" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <StackPanel Orientation="Vertical">
                <Label Content="Workout Name"/>
                <TextBox Name="tbxTrainingName" Text="Training name" Width="100" Margin="10"/>
            </StackPanel>

            <DatePicker Name="dpDatePicker" Width="200" VerticalAlignment="Center"/>

            <StackPanel Orientation="Vertical">
                <Label Content="Total Duration"/>
                <TextBox Name="tbxTotalDuration" Width="100" Margin="10"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <ComboBox Name="cmbExercises" Width="150" Margin="5">
                <ComboBoxItem Content="Bench Press"/>
                <ComboBoxItem Content="Squat"/>
                <ComboBoxItem Content="Deadlit"/>
                <ComboBoxItem Content="Pull-up"/>
            </ComboBox>
            <TextBox Name="tbxSets" Text="Sets" Width="50" Margin="5"/>
            <TextBox Name="tbxReps" Text="Reps" Width="50" Margin="5"/>
            <TextBox Name="tbxWeight" Text="Weight" Width="50" Margin="5"/>
            <Button Name="btnAddExercise" Content="Add" Width="50" Margin="5"/>
        </StackPanel>

        <ListBox Name="lbxExercises" Grid.Row="2" Margin="10"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <Button Name="btnSaveTraining" Content="Save" Width="50" Margin="5"/>
        </StackPanel>

        
    </Grid>
</Page>
